{% extends 'base.html.twig' %}

{% block title %}Modification de {{app.user.prenom}} {{app.user.nom}}{% endblock %}

{% block body %}
    {% for message in app.flashes('error') %}
        <p>{{message}}</p>
    {% endfor %}
    
    <h1>Modification du mot de passe de {{app.user.prenom}} {{app.user.nom}}</h1>

    <form method='post'>
        <p><label for='pass'>Nouveau mot de passe</label>
        <input id='pass' name='pass' type='password'></p>
        <p><label for='pass2'>Confirmer mot de passe</label>
        <input id='pass2' name='pass2' type='password'></p>

        <button type='submit'>Valider</button>
    </form>
{% endblock %}